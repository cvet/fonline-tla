    GameCards[GameCards.length() - 1].grow(PLAYERS_COUNT * CARD_COUNT);
    ReplCards.grow(1);
    ReplCards.last() = array<uint8>();
    ReplCards[ReplCards.length() - 1].grow(PLAYERS_COUNT);
