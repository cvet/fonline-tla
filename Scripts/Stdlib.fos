int[] StrToIntArr(string str)
{
    string[] entries = str.split("\n");
    int[] arr = {};
    for (int i = 0; i < entries.length(); i++) {
        arr.insertLast(entries[i].toInt());
    }
    return arr;
}

string IntArrToStr(int[] arr)
{
    string result;
    for (int i = 0; i < arr.length(); i++) {
        result += (result.isEmpty() ? "" : "\n") + arr[i];
    }
    return result;
}

