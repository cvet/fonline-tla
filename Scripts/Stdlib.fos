void Warn(Critter player, int npcRole)
{
    if (not player.ControlledByPlayer) {
        return;
    }

    Critter npc = GetNearCritterWithRole(player.GetMap(), player.Hex.x, player.Hex.y, WARN_DIST, npcRole);
    if (not valid(npc)) {
        return;
    }

    Messaging::SayOnHead(npc, TextPackName::Text, 1001);
}

void DoorControl(Critter player, int entryNum, bool toOpen)
{
    DoorControl(player, hstring("" + entryNum), toOpen);
}

void DoorControl(Critter player, hstring entryNum, bool toOpen)
{
    Map map = player.GetMap();
    mpos hex;
    if (valid(map) && Entrance::MapGetEntryCoords(map, hstring("" + entryNum), 0, hex)) {
        Item door = Maps::MapGetDoor(map, hex);
        if (valid(door)) {
            Lockers::SwitchLocker(door, toOpen);
        }
    }
}

bool DialogNpc(Critter player, int role)
{
    if (not player.ControlledByPlayer) {
        return false;
    }

    Critter npc = GetNearCritterWithRole(player.GetMap(), player.Hex.x, player.Hex.y, WARN_DIST, role);
    if (not valid(npc)) {
        return false;
    }

    CritterState::Wait(player, 0);
    Dialogs::RunDialog(player, npc, true);
    return true;
}

Critter GetNearCritterWithRole(Map map, int hexX, int hexY, int radius, int role)
{
    Critter[] critters = map.GetCritters(mpos(hexX, hexY), radius, CritterFindType::NonDead);
    int minDist = 10000;
    Critter nearCrit = null;
    for (int i = 0; i < critters.length(); i++) {
        if (critters[i].NpcRole == role) {
            int d = Game.GetDistance(mpos(hexX, hexY), critters[i].Hex);
            if (d < minDist) {
                minDist = d;
                nearCrit = critters[i];
            }
        }
    }
    return nearCrit;
}

/**
   атаковать игрока
   Использовать этот тригер для охраны серьезных обьектов не рекомендуеться.
   param=1
 */
void Attack(Critter player, int npcRole)
{
    if (not player.ControlledByPlayer) {
        return;
    }

    Map map = player.GetMap();
    Critter[] critters = map.GetCritters(CritterProperty::NpcRole, npcRole, CritterFindType::NonDeadNpc);
    for (int i = 0; i < critters.length(); i++) {
        NpcPlanes::AddAttackPlane(critters[i], AI_PLANE_ATTACK_PRIORITY + 1, player);
    }
}

/**
   охрана останавливает атаку
   param=1
 */
void AttackStop(Critter player, int npcRole)
{
    if (not player.ControlledByPlayer) {
        return;
    }

    Map map = player.GetMap();
    Critter[] critters = map.GetCritters(CritterProperty::NpcRole, npcRole, CritterFindType::NonDeadNpc);
    for (int i = 0; i < critters.length(); i++) {
        Critter npc = critters[i];

        // проходимся по списку планов в поисках маркированного плана
        NpcPlanes::NpcPlane[] planes = {};
        int count = NpcPlanes::GetPlanes(npc, planes);
        for (int j = 0; j < count; j++) {
            if (planes[j].Attack_TargId == player.Id && planes[j].Priority == AI_PLANE_ATTACK_PRIORITY + 1) {
                if (NpcPlanes::ErasePlane(npc, j)) {
                    EnemyStack::EraseEnemyFromStack(npc, player.Id);
                }
            }
        }
    }
    return;
}

