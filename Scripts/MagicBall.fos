// Magic 8 ball script

/* > 0 luck = 3899..3908
 # > 3 luck = 3899..3919
 # > 5 luck = 3899..3919
 # > 6 luck = 3899..3932
 # > 7 luck = 3899..3935
 # > 8 luck = 3899..3941
 # > 9 luck = 3899..3943
 */

void _BallInit(Item item, bool firstTime)
{
    GameInstance.OnCritterUseItem.SubscribeToItem(item, _BallUse);
}

bool _BallUse(Critter cr, Item item, Critter onCritter, Item onItem, const Item onScenery, uint param)
{
    _BallSkill(item, cr, SKILL_PICK_ON_GROUND);
    return false;
}

bool _BallSkill(Item item, Critter cr, int skill)
{
    if (skill != SKILL_PICK_ON_GROUND)
        return false;

    uint lastStr = 3899;
    switch (cr.Luck) {
    case 10:
        lastStr = 3942;
        break;
    case 9:
        lastStr = 3941;
        break;
    case 8:
        lastStr = 3935;
        break;
    case 7:
        lastStr = 3932;
        break;
    case 6:
        lastStr = 3919;
        break;
    case 5:
        lastStr = 3919;
        break;
    default:
        lastStr = 3908;
        break;
    }

    lastStr = Random(3899, lastStr);
    cr.SayMsg(SAY_EMOTE, TEXTMSG_TEXT, lastStr);
    return true;
}
