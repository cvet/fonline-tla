// НПЦ, который может сломать терминал
void r_BrakeTerminal( Critter& player, Critter@ npc )
{
    if( !valid( npc ) )
        return;

    Map@   map = npc.GetMap();
    uint16 hx = 0;
    uint16 hy = 0;
    if( !valid( map ) || !GetEntireFreeHex( map, ENTIRE_OUTER_TERMINAL, hx, hy ) )
