// продолжение движения каравана
void r_ContinueCaravan(Critter player, Critter npc)
{
    if (!valid(npc))
        return;
    CaravanInfo crv = _GetCaravan(npc.CaravanCrvId);
    if (!valid(crv)) {
        Log("Error: CaravanInfo not found. Id = " + npc.CaravanCrvId);
        return;
