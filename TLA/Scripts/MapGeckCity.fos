void r_OpenDoor( Critter& player, Critter@ none )
{
    Item@ door = GetGeckDoor( player.GetMap() );
    if( !valid( door ) )
        return;

    door.LockerOpen();
    SavedDeferredCall( GAME_SECOND_TO_TICK( CLOSE_DOOR_TIME ), AutoCloseDoor, door.Id );
}

void r_CloseDoor( Critter& player, Critter@ none )
{
    Item@ door = GetGeckDoor( player.GetMap() );
    if( !valid( door ) )
        return;

    door.LockerClose();
}

