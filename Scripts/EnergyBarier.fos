bool ObjectUse(Critter cr, Item item, hstring proto)
{
    CBarier field;
    bool autoOn;
    int fieldMode = GetFieldMode(item);
    int bonus = 0;
    if (proto == Content::Item::super_tool_kit) {
        bonus = SUPER_TOOL_BONUS;
    }
    else if (proto == Content::Item::multi_tool) {
        bonus = TOOL_BONUS;
    }

    if (Time::IsTimeoutActive(cr.TimeoutSkScience)) {
        Messaging::Info(cr, TextPackName::Game, MsgStr::StrSkillWeariness);
        return true;
    }

    if (SKILL_SUCCESS(cr, CritterProperty::SkillScience, bonus + int(item.Val0))) {
        field = GetBarier(item.Hex.x, item.Hex.y, item.ProtoId);
        if (!valid(field)) {
            return false;
        }

        if ((fieldMode == BM_ON) or (fieldMode == BM_HALF_ON)) {
            Messaging::Info(cr, TextPackName::Text, MSG_REPAIR_WIN_OFF);
            autoOn = (field.Blockers[0].Val4 == 0) ? true : false;
            if (autoOn) {
                DL("Автовключение");
                any[] values = {};
                values.insertLast(field.Blockers[0].Id);
                Game.StartTimeEvent(TIME_BARIER_OPEN, TurnOnBarier, values); //SavedDeferredCall
            }
            field.ChangeMode(BM_OFF);
        }
        else {
            Messaging::Info(cr, TextPackName::Text, MSG_REPAIR_WIN_ON);
            field.ChangeMode(BM_ON);
        }

        if (!GaveExp(cr, item.Id)) {
            cr.Experience += EXP_DISABLE_FORCE_FIELD;
        }

        cr.TimeoutSkScience = SCIENCE_TIMEOUT(cr);
    }
    else {
        field = GetBarier(item.Hex.x, item.Hex.y, item.ProtoId);
        if (field.GetFieldMode() == BM_ON or field.GetFieldMode() == BM_HALF_ON) {
            Messaging::Info(cr, TextPackName::Text, MSG_REPAIR_FAIL_OFF);
        }
        else {
            Messaging::Info(cr, TextPackName::Text, MSG_REPAIR_FAIL_ON);
        }

        cr.TimeoutSkScience = SCIENCE_TIMEOUT(cr);
    }
    return true;
}

