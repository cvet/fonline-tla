void r_SFMerc2Player(Critter player, Critter npc)
{
    if (!valid(npc)) {
        return;
    }
    if (Merc::IsMerc(npc)) {
        return;
    }

    any[] values = {npc.Id, player.Id};
    Game.StartTimeEvent(Tla::GameSeconds(CONTRACT_TIME), DoCancelContract, values); // Окончание контракта через полгода//SavedDeferredCall

    Merc::Merc2Player(player, npc, true, false, 0, Merc::MMDistMedium, Merc::MercGuardDefault, true, false, Tla::GameSeconds(CONTRACT_TIME));
    npc.SetupScript(_SFMercInit);
}

void DoCancelContract(any[] values)
{
    Critter merc = Game.GetCritter(values[0]);
    ident masterId;
    if (values.length() > 0) {
        masterId = values[1];
    }
    if (valid(merc)) {
        if (masterId == ZERO_IDENT) {
            CancelContract(merc);
        }
        else {
            if (masterId == merc.SfMercMaster) { // Хозяин уже мог смениться
                CancelContract(merc);
            }
        }
    }
}

void CancelContract(Critter merc)
{
    Critter cr = Game.GetCritter(merc.SfMercMaster);
    if (valid(cr)) {
        cr.SfMercMaster = ZERO_IDENT;
    }
    merc.SfMercMaster = ZERO_IDENT;
}

