// Сдача крыс лоуренсу при выполнении квеста "пляши под мою дудку"
void r_AwakeRats(Critter cr, Critter npc)
{
    if (valid(npc) && NpcPlanes::IsNoPlanes(npc)) {
        Map map = npc.GetMap();
        if (valid(map)) {
            for (uint i = 0; i < 5; i++) {
                uint16 x = npc.Hex.x;
                uint16 y = npc.Hex.y;
                if (Caravan::GetFreeHex(map, 2, x, y)) {
                    uint8 dir = Game.GetDirection(mpos(x, y), npc.Hex);
                    Critter rat = map.AddNpc(Content::Critter::RegularRat, mpos(x, y), dir);
                    rat.SetupScript(RatGrenade::_RatInit);
                    if (valid(rat)) {
                        NpcPlanes::AddAttackPlane(rat, 0, npc);
                    }
                }
            }
            npc.StartTimeEvent(Time::RealSecond(3), cte_Comment1);
        }
    }
}

