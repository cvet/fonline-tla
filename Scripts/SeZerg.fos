void _MapInit(Map map, bool firstTime)
{
    Critter[] critters = {};
    Obsolete::GetCritters(map, 0, FIND_LIFE | FIND_ONLY_NPC, critters);
    for (uint i = 0; i < critters.length(); i++) {
        critters[i].ReplicationTime = -1;
        critters[i].IsNoLoot = true;
    }
}

