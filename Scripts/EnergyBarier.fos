CGuards GetGuards(Critter[] guards, int netNum, int barierId)
{
    if (guards.length() == 0) {
        return null;
    }

    CGuards g;
    Map map = guards[0].GetMap();
    if (!valid(map)) {
        Game.Log("map not valid");
        return null;
    }

    Location loc = map.GetLocation();
    if (!valid(loc)) {
        Game.Log("location not valid");
        return null;
    }

    CBariersNet net = GetBariersNet(netNum, loc.Id);
    if (!valid(net)) {
        Game.Log("Net not valid");
        return null;
    }

    if (loc.ProtoId == Content::Item::throwing_knife) {
        g = CGuards_GeckCity();
    }
    else {
        g = CGuards();
    }
    return g;
}

