void r_PutPlayerRequest2Info(Critter player, Critter caravaneer)
{
    CaravanInfo crv = _GetCaravan(caravaneer.CaravanCrvId);
    if (!valid(crv)) {
        Log("Error: CaravanInfo not found. Id = " + caravaneer.CaravanCrvId);
