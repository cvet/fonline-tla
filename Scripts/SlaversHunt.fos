EncSlaversDescr GetEncDescr(hstring mapPid)
{
    if (mapPid == Content::Location::desert_6) {
        return Desert06Enc();
    }
    else if (mapPid == Content::Location::desert_11) {
        return Desert11Enc();
    }
    else if (mapPid == Content::Location::desert_12) {
        return Desert12Enc();
    }
    return null;
}

