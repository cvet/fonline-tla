#ifdef __CLIENT
void ShowDialogBox(int dialogID, string text, string[] buttonsTexts)
{
    Game.ShowScreen(CLIENT_SCREEN_DIALOGBOX, dict<string, any> = {{"DialogID", dialogID}, {"Text", text}, {"ButtonTexts", Stdlib::StrArrToStr(buttonsTexts)}});
