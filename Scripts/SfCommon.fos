// Регулярное радио-сообщение.
// Повторяется раз в игровые сутки на одном из каналов, выбранном случайно
void TimeToBroadcast()
{
    if (where_asked) {
        Radio::SendChannelRadioMessage(radio_channel, TextPackName::Text, STR_WHERE_IS_NANCY);
        Critter player = Game.GetCritter(who_asked_id);
        if (valid(player) && player.SFSlimSidnancy == 1) {
            player.SFSlimSidnancy = 2;
            message_counter = MAX_SESSION_MESSAGES; // Только один игрок в сутки
        }
        who_asked_id = ZERO_IDENT;
        where_asked = false;
    }
    else if (name_asked) {
        Radio::SendChannelRadioMessage(radio_channel, TextPackName::Text, STR_NAME_NANCY);
        name_asked = false;
    }
    else {
        who_asked_id = ZERO_IDENT;
        Radio::SendChannelRadioMessage(radio_channel, TextPackName::Text, STR_SOS);
    }
    message_counter++;
    if (message_counter > MAX_SESSION_MESSAGES) {
        for (uint i = 0; i < WhoAreYouKeywords.length(); i++) {
            // Todo: Game.RemoveTextListener(SAY_RADIO, WhoAreYouKeywords[i], radio_channel);
        }
        for (uint i = 0; i < WhereAreYouKeywords.length(); i++) {
            // Todo: Game.RemoveTextListener(SAY_RADIO, WhereAreYouKeywords[i], radio_channel);
        }
        return;
    }
    Game.StartTimeEvent(Tla::GameSeconds(NEXT_MESSAGE_SECONDS), TimeToBroadcast);
}

