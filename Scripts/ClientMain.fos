// Generic description. Descriptions type look in _client_defines.fos, Generic descriptions types.
// int& offsX, int& offsY - offsets of text, by default is zero.
string generic_description(int descType, int& offsX, int& offsY)
{
    Critter chosen = Game.GetChosen();
    if (not valid(chosen)) {
        return "";
    }
    string result;

    if (descType == GenericDescriptionsTypes::InventoryMain) {
        result += chosen.Name + "\n";
        result += "---------------------\n";
        result += Game.GetMsgStr(TEXTMSG_GAME, STR_INV_SHORT_SPECIAL(CritterProperty::Strength)) + "\n";
        result += Game.GetMsgStr(TEXTMSG_GAME, STR_INV_SHORT_SPECIAL(CritterProperty::Perception)) + "\n";
        result += Game.GetMsgStr(TEXTMSG_GAME, STR_INV_SHORT_SPECIAL(CritterProperty::Endurance)) + "\n";
        result += Game.GetMsgStr(TEXTMSG_GAME, STR_INV_SHORT_SPECIAL(CritterProperty::Charisma)) + "\n";
        result += Game.GetMsgStr(TEXTMSG_GAME, STR_INV_SHORT_SPECIAL(CritterProperty::Intellect)) + "\n";
        result += Game.GetMsgStr(TEXTMSG_GAME, STR_INV_SHORT_SPECIAL(CritterProperty::Agility)) + "\n";
        result += Game.GetMsgStr(TEXTMSG_GAME, STR_INV_SHORT_SPECIAL(CritterProperty::Luck)) + "\n";
        result += "---------------------\n";

        AbstractItem weaponMain = CritterItem::GetActive(chosen);
        if (valid(weaponMain)) {
            int use = _WeaponModeUse(weaponMain.Mode);
            if (use > 2) {
                use = 0;
            }

            result += Game.GetMsgStr(TEXTMSG_ITEM, STR_ITEM_NAME(weaponMain)) + "\n";

            if (weaponMain.Type == ItemType::Weapon) {
                result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvDmg) + " ";
                result += _WeaponDmgMin(weaponMain, use) + "-";
                int wpnMaxDmg = _WeaponDmgMax(weaponMain, use);
                if (_WeaponIsHtHAttack(weaponMain, use)) {
                    wpnMaxDmg += chosen.MeleeDamage;
                }
                result += wpnMaxDmg;

                if (_WeaponMaxDist(weaponMain, use) > 1) {
                    result += " " + Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvDist) + " ";
                    int wpnMaxDist = _WeaponMaxDist(weaponMain, use);
                    if (_WeaponSkill(weaponMain, use) == CritterProperty::SkillThrowing) {
                        wpnMaxDist = MIN(wpnMaxDist, 3 * MIN(int(10), chosen.Strength + 2 * chosen.PerkHeaveHo));
                    }
                    result += wpnMaxDist;
                }
                result += "\n";

                if (weaponMain.Weapon_MaxAmmoCount > 0) {
                    result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvAmmo) + " ";
                    result += weaponMain.AmmoCount + "/";
                    result += weaponMain.Weapon_MaxAmmoCount + " ";
                    result += Game.GetMsgStr(TEXTMSG_GAME, STR_CALIBER(weaponMain.Weapon_Caliber));
                }
                result += "\n";
            }
            else {
                result += "\n\n";
            }
        }
        else {
            // Unarmed
            AbstractItem unarmed = CritterItem::GetActive(chosen);
            result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvNoItem) + "\n";
            result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvUnarmedDmg) + " ";
            result += _WeaponDmgMin(unarmed, _WeaponModeUse(unarmed.Mode)) + "-";
            result += (_WeaponDmgMax(unarmed, _WeaponModeUse(unarmed.Mode)) + chosen.MeleeDamage);
            result += "\n\n";
        }
        result += "---------------------\n";

        AbstractItem weaponExt = CritterItem::GetActive(chosen, SLOT_HAND2);
        if (valid(weaponExt)) {
            int use = _WeaponModeUse(weaponExt.Mode);
            if (use > 2) {
                use = 0;
            }

            result += Game.GetMsgStr(TEXTMSG_ITEM, STR_ITEM_NAME(weaponExt)) + "\n";

            if (weaponExt.Type == ItemType::Weapon) {
                result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvDmg) + " ";
                result += _WeaponDmgMin(weaponExt, use) + "-";
                int wpnMaxDmg = _WeaponDmgMax(weaponExt, use);
                if (_WeaponIsHtHAttack(weaponExt, use)) {
                    wpnMaxDmg += chosen.MeleeDamage;
                }
                result += wpnMaxDmg;
                if (_WeaponMaxDist(weaponExt, use) > 1) {
                    result += " " + Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvDist) + " ";
                    int wpnMaxDist = _WeaponMaxDist(weaponExt, use);
                    if (_WeaponSkill(weaponExt, use) == CritterProperty::SkillThrowing) {
                        wpnMaxDist = MIN(wpnMaxDist, 3 * MIN(int(10), chosen.Strength + 2 * chosen.PerkHeaveHo));
                    }
                    result += wpnMaxDist;
                }
                result += "\n";

                if (weaponExt.Weapon_MaxAmmoCount > 0) {
                    result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvAmmo) + " ";
                    result += weaponExt.AmmoCount + "/";
                    result += weaponExt.Weapon_MaxAmmoCount + " ";
                    result += Game.GetMsgStr(TEXTMSG_GAME, STR_CALIBER(weaponExt.Weapon_Caliber));
                }
                result += "\n";
            }
            else {
                result += "\n\n";
            }
        }
        else {
            // Unarmed
            AbstractItem unarmed = CritterItem::GetActive(chosen, SLOT_HAND2);
            result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvNoItem) + "\n";
            result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvUnarmedDmg) + " ";
            result += _WeaponDmgMin(unarmed, _WeaponModeUse(unarmed.Mode)) + "-";
            result += (_WeaponDmgMax(unarmed, _WeaponModeUse(unarmed.Mode)) + chosen.MeleeDamage);
            result += "\n\n";
        }

        result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvTotalWeight) + " ";
        result += (chosen.ItemsWeight / 1000) + "/";
        result += (chosen.CarryWeight / 1000) + ".";
    }
    else if (descType == GenericDescriptionsTypes::InventorySpecial) {
        offsX = 23;
        result += "\n\n";
        result += chosen.Strength + "\n";
        result += chosen.Perception + "\n";
        result += chosen.Endurance + "\n";
        result += chosen.Charisma + "\n";
        result += chosen.Intellect + "\n";
        result += chosen.Agility + "\n";
        result += chosen.Luck;
    }
    else if (descType == GenericDescriptionsTypes::InventoryStats) {
        offsX = 39;
        result += "\n\n";
        result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvHp) + " ";
        result += chosen.CurrentHp + "/" + chosen.MaxLife + "\n";
        result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvAc) + " ";
        result += chosen.ArmorClass + "\n";
        result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvNormal) + "\n";
        result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvLaser) + "\n";
        result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvFire) + "\n";
        result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvPlasma) + "\n";
        result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvExplode);
    }
    else if (descType == GenericDescriptionsTypes::InventoryResist) {
        offsX = 103;
        result += "\n\n\n\n";
        int[] threshold = array<int>(chosen.DamageThreshold);
        int[] resistance = array<int>(chosen.DamageResistance);
        result += threshold[DamageTypes::Normal] + "/" + resistance[DamageTypes::Normal] + "%\n";
        result += threshold[DamageTypes::Laser] + "/" + resistance[DamageTypes::Laser] + "%\n";
        result += threshold[DamageTypes::Fire] + "/" + resistance[DamageTypes::Fire] + "%\n";
        result += threshold[DamageTypes::Plasma] + "/" + resistance[DamageTypes::Plasma] + "%\n";
        result += threshold[DamageTypes::Explode] + "/" + resistance[DamageTypes::Explode] + "%";
    }

    return result;
}

// //////////////////////////////////////////////////////////////////////////////////////////////////
// Item description. Look types look in _client_defines.fos, Item look types.
string item_description(Item item, ItemLookTypes lookType)
{
    // Default error text
    if (not Game.IsMsgStr(TEXTMSG_ITEM, STR_ITEM_NAME(item) + (lookType != ItemLookTypes::OnlyName ? 1 : 0))) {
        return Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrItemLookNothing);
    }

    string result;

    // Car on world map
    if (lookType == ItemLookTypes::WmCar) {
        string fuel = Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvCarFuel);
        fuel = Game.ReplaceText(fuel, "VALUE", item.Charge / 100);
        fuel = Game.ReplaceText(fuel, "MAX_VALUE", item.Car_TankVolume / 100);
        string deterioration = Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvCarDeterioration);
        deterioration = Game.ReplaceText(deterioration, "VALUE", item.Deterioration * 100 / item.Car_MaxDeterioration);
        result = fuel + "\n" + deterioration;
    }
    // Short info
    else if (lookType == ItemLookTypes::OnlyName) {
        result += Game.ReplaceText(Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrItemLook), "NAME", Game.GetMsgStr(TEXTMSG_ITEM, STR_ITEM_NAME(item)));
    }
    // Full info
    else {
        if (lookType == ItemLookTypes::Inventory) {
            result += Game.GetMsgStr(TEXTMSG_ITEM, STR_ITEM_NAME(item)) + "\n";
        }

        if (item.ProtoId == Content::Item::holodisk && item.HolodiskNum != 0) {
            result += Game.GetMsgStr(TEXTMSG_HOLO, STR_HOLO_INFO_NAME(item.HolodiskNum));
        }
        else {
            result += Game.GetMsgStr(TEXTMSG_ITEM, STR_ITEM_INFO(item));
        }

        if (lookType != ItemLookTypes::Map) {
            // Weight
            result += "\n" + Game.ReplaceText(Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrItemWeightGramm), "VALUE", item.Weight * item.Count);

            // Ammo load
            if (item.Type == ItemType::Weapon && item.Weapon_MaxAmmoCount > 0) {
                result += "\n";
                string str = Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvHasShots);
                str = Game.ReplaceText(str, "VALUE", item.AmmoCount);
                str = Game.ReplaceText(str, "MAX_VALUE", item.Weapon_MaxAmmoCount);
                str = Game.ReplaceText(str, "AMMO", Game.GetMsgStr(TEXTMSG_GAME, STR_CALIBER(item.Weapon_Caliber)));
                result += str;
            }

            // Deterioration
            if (item.Deteriorable) {
                uint8 brokenCount = item.BrokenCount;
                uint16 deterioration = item.Deterioration;

                // Broken level, procent
                result += "\n";
                if (item.BrokenNotresc) {
                    result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrDeteriorationNoResc);
                }
                else if (item.BrokenLowBroken) {
                    result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrDeteriorationBrokenLow);
                }
                else if (item.BrokenNormBroken) {
                    result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrDeteriorationBrokenNorm);
                }
                else if (item.BrokenHighBroken) {
                    result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrDeteriorationBrokenHigh);
                }
                else {
                    result +=
                        Game.ReplaceText(Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrDeteriorationProcent), "VALUE", deterioration * 100 / Tla::MaxDeterioration);
                }

                // Service
                if (item.BrokenService) {
                    result += "\n" + Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrDeteriorationService);
                }

                // Service ext
                if (item.BrokenServiceExt) {
                    result += "\n" + Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrDeteriorationServiceExt);
                }

                // Broken count
                Critter chosen = Game.GetChosen();
                if (valid(chosen) && chosen.PerkMrFixit != 0) {
                    result += "\n" + Game.ReplaceText(Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrDeteriorationBrokenCount), "VALUE", brokenCount);
                }
            }

            // Key id
            if (item.Type == ItemType::Key) {
                result += "\n" + Game.ReplaceText(Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrInvKeyNumber), "KEY_ID", item.LockerId);
            }
        }
    }

    // Format tags
    if (item.Lexems != "") {
        return Game.FormatTags(result, item.Lexems);
    }
    return result;
}

// //////////////////////////////////////////////////////////////////////////////////////////////////
// Critter description. Look types look in _client_defines.fos, Critter look types.
string critter_description(Critter& cr, CritterLookTypes lookType)
{
    string result;
    int gender = cr.Gender;

    // Player
    if (cr.IsOwnedByPlayer()) {
        // Only name
        if (lookType == CritterLookTypes::OnlyName) {
            result = cr.Name; // No change
        }
        // Short info
        else if (lookType == CritterLookTypes::LookShort) {
            result += Game.GetMsgStr(TEXTMSG_GAME, STR_CRIT_LOOK1(gender));
            result += cr.Name;
            result += ".";
        }
        // Full info
        else {
            result += Game.GetMsgStr(TEXTMSG_GAME, STR_CRIT_LOOK1(gender));

            // Age
            uint ageStr = Game.GetMsgStrNumUpper(TEXTMSG_GAME, STR_CRIT_LOOK_AGE(gender, cr.Age));
            if (ageStr != 0) {
                result += Game.GetMsgStr(TEXTMSG_GAME, ageStr);
            }
            else {
                result += cr.Name;
            }
            result += ".";
        }
    }
    // Npc
    else {
        hstring dlgId = cr.DialogId;
        hstring npcPid = cr.ProtoId;
        bool defaultText = false;

        if (lookType == CritterLookTypes::OnlyName) {
            result = Game.GetMsgStr(TEXTMSG_DLG, STR_NPC_NAME(dlgId, npcPid));
        }
        // Short info
        else if (lookType == CritterLookTypes::LookShort) {
            if (cr.IsAlive() && Game.IsMsgStr(TEXTMSG_DLG, STR_NPC_INFO_LIFE(dlgId, npcPid))) {
                result += Game.GetMsgStr(TEXTMSG_DLG, STR_NPC_INFO_LIFE(dlgId, npcPid));
            }
            else if (cr.IsKnockout() && Game.IsMsgStr(TEXTMSG_DLG, STR_NPC_INFO_KO(dlgId, npcPid))) {
                result += Game.GetMsgStr(TEXTMSG_DLG, STR_NPC_INFO_KO(dlgId, npcPid));
            }
            else if (cr.IsDead() && Game.IsMsgStr(TEXTMSG_DLG, STR_NPC_INFO_DEAD(dlgId, npcPid))) {
                result += Game.GetMsgStr(TEXTMSG_DLG, STR_NPC_INFO_DEAD(dlgId, npcPid));
            }
            else {
                defaultText = true;
            }
        }
        // Full info
        else {
            if (cr.IsAlive() && Game.IsMsgStr(TEXTMSG_DLG, STR_NPC_FULL_INFO_LIFE(dlgId, npcPid))) {
                result += Game.GetMsgStr(TEXTMSG_DLG, STR_NPC_FULL_INFO_LIFE(dlgId, npcPid));
            }
            else if (cr.IsKnockout() && Game.IsMsgStr(TEXTMSG_DLG, STR_NPC_FULL_INFO_KO(dlgId, npcPid))) {
                result += Game.GetMsgStr(TEXTMSG_DLG, STR_NPC_FULL_INFO_KO(dlgId, npcPid));
            }
            else if (cr.IsDead() && Game.IsMsgStr(TEXTMSG_DLG, STR_NPC_FULL_INFO_DEAD(dlgId, npcPid))) {
                result += Game.GetMsgStr(TEXTMSG_DLG, STR_NPC_FULL_INFO_DEAD(dlgId, npcPid));
            }
            else {
                defaultText = true;
            }
        }

        if (defaultText) {
            // Check standart text
            if (Game.IsMsgStr(TEXTMSG_DLG, STR_NPC_NAME(dlgId, npcPid))) {
                if (cr.IsAlive()) {
                    result += Game.ReplaceText(Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrCritLookLife),
                                               "NAME",
                                               Game.GetMsgStr(TEXTMSG_DLG, STR_NPC_NAME(dlgId, npcPid)));
                }
                else if (cr.IsKnockout()) {
                    result +=
                        Game.ReplaceText(Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrCritLookKo), "NAME", Game.GetMsgStr(TEXTMSG_DLG, STR_NPC_NAME(dlgId, npcPid)));
                }
                else if (cr.IsDead()) {
                    result += Game.ReplaceText(Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrCritLookDead),
                                               "NAME",
                                               Game.GetMsgStr(TEXTMSG_DLG, STR_NPC_NAME(dlgId, npcPid)));
                }
            }
            // Set default text
            else {
                result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrCritLookNothing);
            }
        }
    }

    // Additional description
    if (lookType == CritterLookTypes::LookFull) {
        if (result.length() > 0 && result[result.length() - 1] != ".") {
            result += ".";
        }
        result += " ";

        Critter chosen = Game.GetChosen();
        if (valid(chosen) && chosen.PerkAwareness != 0) // Awareness
        {
            result += Game.GetMsgStr(TEXTMSG_GAME, STR_CRIT_LOOK_HP(gender));
            result = Game.ReplaceText(result, "CUR", cr.CurrentHp);
            result = Game.ReplaceText(result, "MAX", cr.MaxLife);

            AbstractItem item = CritterItem::GetActive(cr);
            if (_CritIsInjured(cr)) {
                if (valid(item)) {
                    result += ", ";
                }
                else {
                    result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrAnd);
                }

                result += Game.GetMsgStr(TEXTMSG_GAME, STR_CRIT_LOOK_LIMBS(gender, false));
            }

            if (valid(item)) {
                if (item.Type == ItemType::Weapon) {
                    if (item.Weapon_MaxAmmoCount == 0) {
                        result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrCritLookWeap);
                        result = Game.ReplaceText(result, "WEAPON", Game.GetMsgStr(TEXTMSG_ITEM, STR_ITEM_NAME(item)));
                    }
                    else {
                        result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrCritLookWeapAmmo);
                        result = Game.ReplaceText(result, "WEAPON", Game.GetMsgStr(TEXTMSG_ITEM, STR_ITEM_NAME(item)));
                        result = Game.ReplaceText(result, "CUR", item.AmmoCount);
                        result = Game.ReplaceText(result, "MAX", item.Weapon_MaxAmmoCount);
                        result = Game.ReplaceText(result, "AMMO", Game.GetMsgStr(TEXTMSG_GAME, STR_CALIBER(item.Weapon_Caliber)));
                    }
                }
                else {
                    result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrCritLookMisc);
                    result = Game.ReplaceText(result, "MISC", Game.GetMsgStr(TEXTMSG_ITEM, STR_ITEM_NAME(item)));
                }
            }
        }
        else // Simple
        {
            result += Game.GetMsgStr(TEXTMSG_GAME, STR_CRIT_LOOK_WHO(gender));

            int hp_proc = cr.CurrentHp * 100 / cr.MaxLife;
            if (cr.IsDead()) {
                result += Game.GetMsgStr(TEXTMSG_GAME, STR_CRIT_LOOK_STATE(0));
            }
            else if (hp_proc < 34) {
                result += Game.GetMsgStr(TEXTMSG_GAME, STR_CRIT_LOOK_STATE(1));
            }
            else if (hp_proc < 67) {
                result += Game.GetMsgStr(TEXTMSG_GAME, STR_CRIT_LOOK_STATE(2));
            }
            else if (hp_proc < 100) {
                result += Game.GetMsgStr(TEXTMSG_GAME, STR_CRIT_LOOK_STATE(3));
            }
            else {
                result += Game.GetMsgStr(TEXTMSG_GAME, STR_CRIT_LOOK_STATE(4));
            }

            if (_CritIsInjured(cr)) {
                if (hp_proc < 90) {
                    result += Game.GetMsgStr(TEXTMSG_GAME, MsgStr::StrAnd);
                }
                result += Game.GetMsgStr(TEXTMSG_GAME, STR_CRIT_LOOK_LIMBS(gender, hp_proc >= 90));
            }
        }
        result += ".";
    }

    // Format tags
    if (cr.Lexems != "") {
        return Game.FormatTags(result, cr.Lexems);
    }
    return result;
}

