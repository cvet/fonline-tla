    230,    300,   250,   300,   10,  10,  16,    650,   70,     90
};
#define T_COUNT                 ( 5 )
#define T_POS                   # (pos) ( ( ( pos < T_COUNT ) ? pos : 0 ) * 10 )
#define T_HEAVY                 # (pos) ( Random( termStats_[ T_POS( pos ) ], termStats_[ T_POS( pos ) + 1 ] ) )
#define T_THRWN                 # (pos) ( Random( termStats_[ T_POS( pos ) + 2 ], termStats_[ T_POS( pos ) + 3 ] ) )
#define T_ST                    # (pos) ( termStats_[ T_POS( pos ) + 4 ] )
#define T_EN                    # (pos) ( termStats_[ T_POS( pos ) + 5 ] )
#define T_AP                    # (pos) ( termStats_[ T_POS( pos ) + 6 ] )
#define T_HP                    # (pos) ( termStats_[ T_POS( pos ) + 7 ] )
#define T_RES                   # (pos) ( Random( termStats_[ T_POS( pos ) + 8 ], termStats_[ T_POS( pos ) + 9 ] ) )

#define FLAMER_USE_DIST_MAX     ( 5 )
#define MINIGUN_USE_DIST_MAX    ( 30 )



#define SNEAKERS_SRCH_RADIUS    ( 25 )

void _CritterInit( Critter& cr, bool firstTime )
{
    pattern.SetEvents( cr );
}

class TermPattern : PatternCommon::CommonPattern
{
    bool _PlaneBegin( Critter& cr, NpcPlane& plane, int reason, Critter@ someCr, Item@ someItem )
    {
        if( plane.Type == AI_PLANE_ATTACK )
        {
            Critter@ target = GetCritter( plane.Attack_TargId );
            if( valid( target ) )
            {
                if( target.TeamId == cr.TeamId )
                    return false;                                                              // Отмена атаки криттера из своей группы.
            }
        }
        return true;
    }

    void _Message( Critter& term, Critter& fromCr, int message, int value )
    {
        if( message == PatternCommon::MsgAttackTarget )
        {
            if( term.IsCurPlane( AI_PLANE_ATTACK ) )
                return;
            if( term.TeamId != fromCr.TeamId )
                return;
            if( _MsgReact( term, fromCr, message ) )
                return;

            Critter@target = GetCritter( value );
            if( valid( target ) )
            {
                AttackPlayer( term, target );
            }
        }
    }

    bool _PlaneRun( Critter& cr, NpcPlane& plane, int reason, uint& result0, uint& result1, uint& result2 )
    {
        if( reason == REASON_ATTACK_WEAPON )
        {
            // DL("Term Plane Run");
            Critter@ target = GetCritter( plane.Attack_TargId );
            if( valid( target ) )
            {
                _SelectRightWeapon( cr, target );
            }
        }
        return true;
    }

    bool _Attack( Critter& term, Critter& target )
    {
        // DL("term attack");
        _SelectRightWeapon( term, target );
        return false;
    }

    void _Idle( Critter& term )
    {

        Critter@[] players;
        if( term.GetCritters( false, FIND_LIFE | FIND_ONLY_PLAYERS, players ) > 0 )
        {
            for( uint i = 0, l = players.length(); i < l; i++ )
            {
                DL( "added attackplane" );
                AttackPlayer( term, players[ i ] );
                return;
            }
        }
        // Во время простоя терм ищет сникеров в радиусе дальности
        TryCatchSneakers( term );
    }

    bool _PlaneEnd( Critter& sniper, NpcPlane& plane, int reason, Critter@ someCr, Item@ someItem )
    {
        // DL("PLANE END");
        return true;
    }

    void SetEvents( Critter& cr )
    {
        // __EventCritterAttack.SubscribeToCritter( cr, _TermAttack );
        __EventCritterAttacked.SubscribeToCritter( cr, _TermAttacked );
        __EventNpcPlaneEndEx.SubscribeToCritter( cr, _TermPlaneEnd );
        __EventCritterIdle.SubscribeToCritter( cr, _TermIdle );
        __EventNpcPlaneRunEx.SubscribeToCritter( cr, _TermPlaneRun );
        __EventCritterMessage.SubscribeToCritter( cr, _TermMessage );
        __EventNpcPlaneBeginEx.SubscribeToCritter( cr, _TermPlaneBegin );
        __EventCritterShow.SubscribeToCritter( cr, _TermShowCritter );
        __EventCritterDead.SubscribeToCritter( cr, _TermDead );

    }

    // выбор наиболее подходящего оружия на дистанции до цели
    bool _SelectRightWeapon( Critter& cr, Critter& target )
    {
        // DL("Try select weapon");
        uint dist = GetCrittersDistantion( cr, target );


        bool takeFlamer = false;
        bool takeMinigun = false;
        bool takeLauncher = false;


        if( dist <= FLAMER_USE_DIST_MAX )
            takeFlamer = true;
        if( FLAMER_USE_DIST_MAX < dist && dist <= MINIGUN_USE_DIST_MAX )
            takeMinigun = true;
        if( MINIGUN_USE_DIST_MAX < dist )
            takeLauncher = true;

        Item@ handItem = _CritGetItemHand( cr );

        Item@ weapon;

        if( takeFlamer )
        {
            uint[] flamerPids = { Content::Item::flamer, Content::Item::improved_flamethrower };
            @ weapon = GetCritterWeapon( cr, flamerPids );
        }
        if( takeMinigun )
        {
            uint[] mingunPids = { Content::Item::minigun, Content::Item::avenger_minigun, Content::Item::vindicator_minigun, Content::Item::bozar, Content::Item::light_support_weapon, Content::Item::m60 };
            @ weapon = GetCritterWeapon( cr, mingunPids );
        }

        if( takeLauncher )
        {
            uint[] launcherPids = { Content::Item::rocket_launcher };
            @ weapon = GetCritterWeapon( cr, launcherPids );
        }
        if( !valid( weapon ) )
            return false;
        if( valid( handItem ) )
        {
            if( weapon.Id == handItem.Id )
            {
                return false;
            }
            // _CritMoveItem(cr, handItem, SLOT_INV);
        }
        cr.LastWeaponId = weapon.Id;
        // _CritMoveItem(cr, weapon, SLOT_HAND1);
        // DL("Select item "+weapon.ProtoId);
        // cr.SetFavoriteItem(SLOT_HAND1,weapon.ProtoId);
        return true;

    }
}


