// //////////////////////////////////////////////////////////////////////////////////////////////////
// Call on some critter action.
void critter_action(bool localCall, Critter cr, int action, int actionExt, AbstractItem item)
{
    // Not process locally called actions
    if (cr.IsChosen() && not localCall) {
        switch (action) {
        case ACTION_MOVE_ITEM:
        case ACTION_MOVE_ITEM_SWAP:
        case ACTION_USE_ITEM:
        case ACTION_DROP_ITEM:
        case ACTION_USE_WEAPON:
        case ACTION_RELOAD_WEAPON:
        case ACTION_USE_SKILL:
        // case ACTION_PICK_ITEM:
        case ACTION_PICK_CRITTER:
        case ACTION_OPERATE_CONTAINER:
            return; // Skip processing
        default:
            break; // Processing
        }
    }

    AbstractItem proto = (valid(item) ? item : CritterItem::GetActive(cr));
    if ((action >= ACTION_MOVE_ITEM && action <= ACTION_OPERATE_CONTAINER) || action == ACTION_STANDUP) {
        cr.Wait(Settings.Breaktime);
    }

    switch (action) {
    case ACTION_MOVE:
        // Not implemented
        // cr.Wait(move time);
        break;
    case ACTION_RUN:
        // Not implemented
        // cr.Wait(run time);
        break;
    case ACTION_MOVE_ITEM:
        if (cr.IsAlive()) {
            uint8 fromSlot = actionExt;
            uint8 toSlot = item.CritterSlot;

            cr.StopAnim();

            if (toSlot == SLOT_HAND1) {
                if (proto.Type == ItemType::Weapon) {
                    cr.Animate(proto.Weapon_StateAnim, CritterActionAnim::ShowWeapon, item);
                }
                else {
                    cr.Animate(0, CritterActionAnim::ShowWeapon, item);
                }
            }
            else if (fromSlot == SLOT_HAND1) {
                cr.Animate(0, CritterActionAnim::HideWeapon, item);
            }
            else {
                cr.Animate(0, CritterActionAnim::SwitchItems);
            }
        }
        break;
    case ACTION_MOVE_ITEM_SWAP:
        break;
    case ACTION_USE_ITEM:
        if (cr.IsAlive() && valid(proto)) {
            cr.StopAnim();

            if (proto.Type == ItemType::Weapon && cr.IsAnimAvailable(proto.Weapon_StateAnim, proto.Weapon_ActionAnim_0)) {
                cr.Animate(proto.Weapon_StateAnim, proto.Weapon_ActionAnim_0, item);
            }
            else {
                cr.Animate(0, CritterActionAnim::Use, item);
            }
        }
        break;
    case ACTION_DROP_ITEM:
        if (cr.IsAlive()) {
            cr.StopAnim();
            cr.Animate(0, CritterActionAnim::PickUp);
        }
        break;
    case ACTION_USE_WEAPON:
        if (cr.IsAlive() && valid(proto)) {
            int use = (actionExt & 0xF);
            int aim = ((actionExt >> 4) & 0xF);
            bool fail = (((actionExt >> 8) & 1) != 0);

            cr.StopAnim();

            cr.Animate(0, CritterActionAnim::PrepareWeapon);

            // Game.PlaySound( 'W', SOUND_WEAPON_USE, _WeaponSoundId( proto, use ), use != 1 ? '1' : '2' );
            cr.Animate(0, _WeaponActionAnim(proto, use), item);

            if (fail) {
                cr.Animate(0, CritterActionAnim::DamageFront, item);
            }
            else {
                cr.Animate(0, CritterActionAnim::TurnoffWeapon);
            }
        }
        break;
    case ACTION_RELOAD_WEAPON:
        if (cr.IsAlive() && valid(proto)) {
            cr.StopAnim();
            // Game.PlaySound( 'W', SOUND_WEAPON_RELOAD, proto.Weapon_SoundId_0, '1' );
            cr.Animate(item.Weapon_StateAnim, CritterActionAnim::Reload, item);
        }
        break;
    case ACTION_USE_SKILL:
        if (cr.IsAlive() && actionExt != CritterProperty::SkillSneak) {
            cr.StopAnim();
            cr.Animate(0, CritterActionAnim::Use);
        }
        break;
    case ACTION_PICK_ITEM:
        if (cr.IsAlive() && valid(proto)) {
            cr.StopAnim();
            cr.Animate(0, proto.GroundLevel ? CritterActionAnim::PickUp : CritterActionAnim::Use);
        }
        break;
    case ACTION_PICK_CRITTER:
        if (cr.IsAlive()) {
            cr.StopAnim();

            switch (actionExt) // 0 - loot, 1 - steal, 2 - push
            {
            case 0:
                cr.Animate(0, CritterActionAnim::Loot);
                break;
            case 1:
                cr.Animate(0, CritterActionAnim::Steal);
                break;
            case 2:
                cr.Animate(0, CritterActionAnim::Push);
                break;
            default:
                break;
            }
        }
        break;
    case ACTION_OPERATE_CONTAINER:
        if (cr.IsAlive()) {
            cr.StopAnim();
            int transferType = actionExt / 10;
            int directionType = actionExt % 10;

            if (transferType == TransferTypes::HexContDown || transferType == TransferTypes::CritLoot) {
                cr.Animate(0, CritterActionAnim::PickUp);
            }
            else {
                cr.Animate(0, CritterActionAnim::Use);
            }
        }
        break;
    case ACTION_DODGE:
        if (not cr.IsAnimPlaying() && cr.IsAlive()) {
            cr.Animate(0, actionExt == 0 ? CritterActionAnim::DodgeFront : CritterActionAnim::DodgeBack);
        }
        break;
    case ACTION_DAMAGE:
        if (not cr.IsAnimPlaying()) {
            if (cr.IsAlive()) {
                cr.Animate(0, actionExt == 0 ? CritterActionAnim::DamageFront : CritterActionAnim::DamageBack);
            }
            else if (cr.IsKnockout()) {
                cr.Animate(0, actionExt == 0 ? CritterActionAnim::DamageProneFront : CritterActionAnim::DamageProneBack);
            }
        }
        else {
            // Todo:
            // CritterActionAnim::Walk_DAMAGE_FRONT
            // CritterActionAnim::Walk_DAMAGE_BACK
            // CritterActionAnim::Limp_DAMAGE_FRONT
            // CritterActionAnim::Limp_DAMAGE_BACK
            // CritterActionAnim::Run_DAMAGE_FRONT
            // CritterActionAnim::Run_DAMAGE_BACK
        }
        break;
    case ACTION_DAMAGE_FORCE:
        if (cr.IsAlive()) {
            cr.StopAnim();
            cr.Animate(0, actionExt == 0 ? CritterActionAnim::DamageFront : CritterActionAnim::DamageBack);
        }
        else if (cr.IsKnockout()) {
            cr.StopAnim();
            cr.Animate(0, actionExt == 0 ? CritterActionAnim::DamageProneFront : CritterActionAnim::DamageProneBack);
        }
        break;
    case ACTION_KNOCKOUT:
        if (not cr.IsKnockout()) {
            cr.StopAnim();
            cr.Animate(0, actionExt);
        }
        break;
    case ACTION_STANDUP:
        if (cr.IsKnockout()) {
            cr.StopAnim();
            cr.Animate(0, actionExt);
        }
        break;
    case ACTION_FIDGET:
        if (cr.IsAlive() && not cr.IsAnimPlaying()) {
            cr.Animate(0, CritterActionAnim::Fidget);
        }
        break;
    case ACTION_DEAD:
        if (not cr.IsDead()) {
            cr.StopAnim();
            cr.Animate(0, actionExt);
        }
        break;
    case ACTION_CONNECT:
        break;
    case ACTION_DISCONNECT:
        break;
    case ACTION_RESPAWN:
        break;
    case ACTION_REFRESH:
        break;
    default:
        break;
    }
}

