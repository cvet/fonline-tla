    buttonSend.SetSize(result[2], result[3]);

    buttonSend.SetPressedImage(IniParser::GetIfaceIniStr("RadioBroadcastSendPicDn"));

    ButtonSendRecv buttonRecv = ButtonSendRecv(screen, false);
