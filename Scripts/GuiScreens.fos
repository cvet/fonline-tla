    class Split : Gui::Screen
    {
        uint TargetItemId;
        uint SplitCount;
        int ItemsCollection;

        Item @GetTargetItem()
        {
            Item @[] @items = ClientItems::RefreshItemsCollection(ItemsCollection);
            for (uint i = 0; i < items.length(); i++)
                if (items[i].Id == TargetItemId)
                    return items[i];
            return null;
        }

        void OnConstruct() override
        {
            SetModal(true);
            SetCanMove(true, false);
            SetSize(259, 162);
            SetBackgroundImage("art/intrface/MOVEMULT.png");
        }

        void OnShow(dict<string, string> params) override
        {
            SplitCount = 1;
            TargetItemId = params["TargetItemId"].toInt();
            ItemsCollection = params["ItemsCollection"].toInt();
        }

        void OnGlobalInput(KeyCode key, string text) override
        {
            int result = 0;
            uint count = 0;
            if (text.tryToInt(result)) {
                count = SplitCount * 10;
                count += result;
                if (count > 99999)
                    count = count % 100000;
                SplitCount = count;
            }
        }
    };

