CBarier GetBarier(int hexX, int hexY, hstring proto)
{
    CBarier barier;
    for (int i = 0; i < BariersNets.length(); i++) {
        for (int k = 0; k < BariersNets[i].Bariers.length(); k++) {
            barier = BariersNets[i].Bariers[k];
            if ((int(barier.Barier.Hex.x) == (hexX + GetFieldCoord(hexX, proto, COORD_X))) and
                (int(barier.Barier.Hex.y) == (hexY + GetFieldCoord(hexX, proto, COORD_Y)))) {
                DL("Барьер найден");
                return barier;
            }
        }
    }
    DL("Барьер не найден. " + GetFieldCoord(hexX, proto, COORD_X) + " " + GetFieldCoord(hexY, proto, COORD_Y));
    return null;
}

