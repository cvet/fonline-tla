#define ROLE_Jura    ( 229 )

void ResetVar( uint value )
{
    Critter cr = GetCritter( value );
    if( valid( cr ) )
        cr.KlamKuklachev = 0;
}

void r_Replay( Critter master, Critter slave )
{
    DeferredCall( GAME_MINUTE_TO_TICK( Random( 10, 30 ) ), ResetVar, master.Id );
}
