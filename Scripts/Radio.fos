    refreshText.SetSize(result[2], result[3]);

    refreshText.SetText(GetMsgStr(TEXTMSG_GAME, MsgStr::StrRadioRefresh), FONT_FALLOUT, FT_CENTERX | FT_CENTERY | FT_BORDERED);
