    class Aim : Gui::Screen
    {
        int TargetCritterId;

        string GetChance(int loc)
        {
            Critter @chosen = GetChosen();
            Critter @cr = GetCritter(cast<Aim>(Screen).TargetCritterId);
            if (cr is null)
                return "";
            Item @item = chosen.GetItem(ItemProperty::CritSlot, SLOT_HAND1);
            uint8 mode = item.Mode;
            uint8 use = _WeaponModeUse(mode);
            uint8 aim = _WeaponModeAim(mode);
            mode = _WeaponModeMake(use, loc);
            int hit = ClientMain::to_hit(chosen, cr, item, mode);
            return hit == 0 ? "-" : "" + hit;
        }

        void OnHitLocationSelect(uint loc)
        {
            HideScreen();
            Critter @chosen = GetChosen();
            uint targetCritterId = cast<Aim>(Screen).TargetCritterId;
            Item @item = chosen.GetItem(ItemProperty::CritSlot, SLOT_HAND1);
            uint8 use = item.Mode & 0xF;
            uint8 mode = use | (loc << 4);
            ChosenActions::SetChosenActions(array<uint> = {Tla::ChosenUseItem, item.Id, item.ProtoId.hash, TARGET_CRITTER, targetCritterId, mode, 0});
        }

        void OnConstruct() override
        {
            SetModal(true);
            SetCanMove(true, false);
            SetSize(504, 309);
            SetBackgroundImage("art/intrface/Aim.png");
        }

        void OnShow(dict<string, string> params) override
        {
            if (params !is null)
                TargetCritterId = params["TargetCritterId"].toInt();
        }
    };

