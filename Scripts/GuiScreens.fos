        void OnLMouseClick() override
        {
            HideScreen();

            CritterProperty Prop = cast<SkillsPanel>(Parent).Prop;
            if (TargetCritterId == 0 && TargetItemId == 0) {
                if (Prop == CritterProperty::SkillSneak)
                    ChosenActions::SetChosenActions(array<uint> = {Tla::ChosenUseSklOnCritter, uint(CritterProperty::SkillSneak), 0, 0, 0, 0, 0});
                else {
                    Settings.Cursor = CursorType::UseSkill;
                    Settings.CursorData = uint(Prop);
                }
            }
            else {
                if (TargetCritterId != 0) {
                    Critter @cr = GetCritter(TargetCritterId);
                    if (cr !is null)
                        ChosenActions::SetChosenActions(array<uint> = {Tla::ChosenUseSklOnCritter, uint(Prop), TargetCritterId, 0, 0, 0, 0});
                }
                else {
                    Item @item = GetItem(TargetItemId);
                    if (item !is null) {
                        if (item.Type != ItemType::Generic && item.Type != ItemType::Grid)
                            ChosenActions::SetChosenActions(array<uint> = {Tla::ChosenUseSklOnItem, uint(Prop), TargetItemId, IsInventory ? 1 : 0, 0, 0, 0});
                        else
                            ChosenActions::SetChosenActions(array<uint> = {Tla::ChosenUseSklOnScen, uint(Prop), item.ProtoId.hash, item.HexX, item.HexY, 0, 0});
                    }
                }
            }
        }
