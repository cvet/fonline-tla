void MergeArrays(uint[] arrayTo, uint[] arrayFrom)
{
    for (uint i = 0, l = arrayFrom.length(); i < l; i++) {
        arrayTo.insertLast(arrayFrom[i]);
    }
}

void MergeArrays(int[] arrayTo, int[] arrayFrom)
{
    for (uint i = 0, l = arrayFrom.length(); i < l; i++) {
