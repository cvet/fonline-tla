    void GetAccessPerks()
    {
        Critter @chosen = GetChosen();
        if (not valid(chosen))
            return;
        AccessPerks.clear();

        for (uint i = 0, j = CritterPropertyPerks.length(); i < j; i++)
            if (Perks::PerkCheck(chosen, CritterPropertyPerks[i]))
                AccessPerks.insertLast(CritterPropertyPerks[i]);
    }

